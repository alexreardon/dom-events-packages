{
  "name": "bind-event-listener",
  "version": "3.0.0",
  "private": false,
  "type": "module",
  "description": "Safe DOM Event binding and unbinding",
  "author": "Alex Reardon <alexreardon@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexreardon/bind-event-listener.git"
  },
  "keywords": [
    "event listener",
    "event handler",
    "dom events",
    "dom",
    "ui",
    "bind"
  ],
  "sideEffects": false,
  "main": "./dist/esm/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "config": {
    "prettier_target": "src/**/*.ts test/**/*.ts"
  },
  "files": [
    "/dist",
    "/src"
  ],
  "size-limit": [
    {
      "path": "./dist/esm/bind.js",
      "limit": "95B"
    },
    {
      "path": "./dist/esm/bind-all.js",
      "limit": "211B"
    }
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "yarn build:clean && yarn build:dist && yarn build:types",
    "build:clean": "rimraf dist",
    "build:dist": "esbuild ./src/* --outdir=./dist --format=esm",
    "build:types": "tsc",
    "check": "yarn check:typescript && yarn check:prettier",
    "check:prettier": "prettier --debug-check $npm_package_config_prettier_target",
    "check:typescript": "tsc --noEmit && tsc --noEmit --project ./test/tsconfig.json",
    "prettier:write": "prettier --write $npm_package_config_prettier_target",
    "test": "yarn jest",
    "test:size": "size-limit",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {},
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.2.4",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.0",
    "esbuild": "^0.21.3",
    "expect-type": "^0.15.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.0",
    "size-limit": "^8.2.4",
    "ts-expect": "^1.3.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  }
}
